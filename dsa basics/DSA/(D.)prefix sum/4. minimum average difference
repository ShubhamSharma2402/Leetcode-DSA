leetcode:- 2256. Minimum Average Difference

1st approach:-(simple and best)
class Solution {
public:
    int minimumAverageDifference(vector<int>& nums) {
        int n = nums.size();

        long long totalSum = 0;
        for (int x : nums) totalSum += x;

        long long leftSum = 0;
        long long minDiff = LLONG_MAX;
        int index = 0;

        for (int i = 0; i < n; i++) {
            leftSum += nums[i];

            long long leftAvg = leftSum / (i + 1);

            long long rightAvg = 0;
            if (i != n - 1) {
                rightAvg = (totalSum - leftSum) / (n - i - 1);
            }

            long long diff = llabs(leftAvg - rightAvg);

            if (diff < minDiff) {
                minDiff = diff;
                index = i;
            }
        }

        return index;
    }
};


2nd approach:-(using prefix sum)
class Solution {
public:
    int minimumAverageDifference(vector<int>& nums) {
        int n=nums.size();
        int indexx=0;
        if(n==0){
            return 0;
        }
        vector<long long>prefix(n);
        prefix[0]=nums[0];
        long long avg_diff=LLONG_MAX;
       
        for(int i=1;i<n;i++){
            prefix[i]=prefix[i-1]+nums[i];
        }
        
        for(int i=0;i<n;i++){
            long long left=prefix[i]/(i+1);
            long long right=0;
            if(i!=n-1){
           right=(prefix[n-1]-prefix[i])/(n-i-1);
            }
            if(abs(left-right)<avg_diff){
                avg_diff=abs(left-right);
                 indexx=i;
            }
            
        }
        return indexx;
    }
};